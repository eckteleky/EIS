@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = @EIS.Resources.Resource.ResourceManager.GetString("Configure authenticator app", System.Globalization.CultureInfo.CurrentCulture);
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h2 style="color: rgba(0,0,0,.9);">@ViewData["Title"]</h2>
<div style="color: rgba(0,0,0,.9);">
    <p>@EIS.Resources.Resource.ResourceManager.GetString("To use an authenticator app go through the following steps:", System.Globalization.CultureInfo.CurrentCulture)</p>
    <ol class="list">
        <li>
            <p>
                @EIS.Resources.Resource.ResourceManager.GetString("Download a two-factor authenticator app like Microsoft Authenticator for", System.Globalization.CultureInfo.CurrentCulture)
                <a href="https://go.microsoft.com/fwlink/?Linkid=825072">Android</a> @EIS.Resources.Resource.ResourceManager.GetString("and", System.Globalization.CultureInfo.CurrentCulture)
                <a href="https://go.microsoft.com/fwlink/?Linkid=825073">iOS</a> @EIS.Resources.Resource.ResourceManager.GetString("or", System.Globalization.CultureInfo.CurrentCulture)
                @EIS.Resources.Resource.ResourceManager.GetString("Google Authenticator for", System.Globalization.CultureInfo.CurrentCulture)
                <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en">Android</a> @EIS.Resources.Resource.ResourceManager.GetString("and", System.Globalization.CultureInfo.CurrentCulture)
                <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">iOS</a>.
            </p>
        </li>
        <li>
            <p>
                @EIS.Resources.Resource.ResourceManager.GetString("Scan the QR Code or enter this key", System.Globalization.CultureInfo.CurrentCulture) <kbd>@Model.SharedKey</kbd> @EIS.Resources.Resource.ResourceManager.GetString("into your two factor authenticator app. Spaces and casing do not matter.", System.Globalization.CultureInfo.CurrentCulture)
            </p>
            @*<div class="alert alert-info">Learn how to <a href="https://go.microsoft.com/fwlink/?Linkid=852423">enable QR code generation</a>.</div>*@
            <div id="qrCode" style="width:250px;height:250px;"></div>
            <div id="qrCodeData" data-url="@Html.Raw(@Model.AuthenticatorUri)"></div>
        </li>
        <li>
            <p>             
                @EIS.Resources.Resource.ResourceManager.GetString("Once you have scanned the QR code or input the key above, your two factor authentication app will provide you with a unique code. Enter the code in the confirmation box below.", System.Globalization.CultureInfo.CurrentCulture)
            </p>
            <div class="row">
                <div class="col-md-6">
                    <form id="send-code" method="post">
                        <div class="form-group">
                            <label asp-for="Input.Code" class="control-label">@EIS.Resources.Resource.ResourceManager.GetString("Verification Code", System.Globalization.CultureInfo.CurrentCulture)</label>
                            <input asp-for="Input.Code" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">@EIS.Resources.Resource.ResourceManager.GetString("Verify", System.Globalization.CultureInfo.CurrentCulture)</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </li>
    </ol>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript" src="~/lib/qrcode.js"></script>
    <script type="text/javascript" src="~/js/qr.js"></script>
}
