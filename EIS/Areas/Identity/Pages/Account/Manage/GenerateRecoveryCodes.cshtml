@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = @EIS.Resources.Resource.ResourceManager.GetString("Generate two-factor authentication(2FA) recovery codes", System.Globalization.CultureInfo.CurrentCulture);

    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h2 style="color: rgba(0,0,0,.9);">@ViewData["Title"]</h2>
<div class="alert alert-warning" role="alert" style="color: rgba(0,0,0,.9);">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@EIS.Resources.Resource.ResourceManager.GetString("Put these codes in a safe place.", System.Globalization.CultureInfo.CurrentCulture)</strong>
    </p>
    <p>
        @EIS.Resources.Resource.ResourceManager.GetString("If you lose your device and don't have the recovery codes you will lose access to your account.", System.Globalization.CultureInfo.CurrentCulture)
    </p>
    <p>
        @EIS.Resources.Resource.ResourceManager.GetString("Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should", System.Globalization.CultureInfo.CurrentCulture) <a asp-page="./ResetAuthenticator">@EIS.Resources.Resource.ResourceManager.GetString("reset your authenticator keys.", System.Globalization.CultureInfo.CurrentCulture)</a>
    </p>
</div>
<div style="color: rgba(0,0,0,.9);">
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">@EIS.Resources.Resource.ResourceManager.GetString("Generate Recovery Codes", System.Globalization.CultureInfo.CurrentCulture)</button>
    </form>
</div>