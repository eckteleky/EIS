@page
@model ChangePasswordModel
@{
    ViewData["Title"] = @EIS.Resources.Resource.ResourceManager.GetString("ChangePassword", System.Globalization.CultureInfo.CurrentCulture);
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 style="color: rgba(0,0,0,.9);">@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6" style="color: rgba(0,0,0,.9);">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword">@EIS.Resources.Resource.ResourceManager.GetString("OldPassword", System.Globalization.CultureInfo.CurrentCulture)</label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword">@EIS.Resources.Resource.ResourceManager.GetString("NewPassword", System.Globalization.CultureInfo.CurrentCulture)</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">@EIS.Resources.Resource.ResourceManager.GetString("ComfirmNewPassword", System.Globalization.CultureInfo.CurrentCulture)</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@EIS.Resources.Resource.ResourceManager.GetString("UpdatePassword", System.Globalization.CultureInfo.CurrentCulture)</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}