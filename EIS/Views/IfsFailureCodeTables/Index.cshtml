@model IEnumerable<EIS.EISModels.ViewIfsFailureCodeTable>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using EIS.Helpers
@using Microsoft.AspNetCore.Localization
@using System.Globalization;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/EISDesign/_Layout.cshtml";
}
<div id="PlaceHolderHere"></div>
@if (!SignInManager.IsSignedIn(User))
{
    <head>
        <meta http-equiv="refresh" content="0; url='/Identity/Account/Login'" />
    </head>
}
else
{
    <div class="kanbanview">
        <div class="row" style="margin: 0px 5px">
            <!-- Downtime Report -->
            <div class="col-xl-12" style="padding: 5px">
                <div class="card" style="min-height: 82vh;">
                    <div class="card-body chartview" style="padding: 10px 15px">
                        <h3 class="card-title" style="padding: 8px 0 0 3px">
                            @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("IfsFailureCodeTables", System.Globalization.CultureInfo.CurrentCulture))
                        </h3>
                        <table id="fixed" class="table table-bordered table-hover text-nowrap" style="width: auto; min-width: 1786px !important; margin-top: 5px !important">
                            <thead>
                                <tr class="tableheader">
                                    <th>
                                        @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("LineID", System.Globalization.CultureInfo.CurrentCulture))
                                    </th>
                                    <th>
                                        @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("FailureId", System.Globalization.CultureInfo.CurrentCulture))
                                    </th>
                                    @{
                                        var requestCulture = Context.Features.Get<IRequestCultureFeature>();
                                    }
                                    @if (@requestCulture.RequestCulture.UICulture.Name == "hu-HU")
                                    {
                                        <th>
                                            @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("Description", System.Globalization.CultureInfo.CurrentCulture))
                                        </th>
                                    }
                                    else
                                    {
                                        <th>
                                            @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("DescriptionEN", System.Globalization.CultureInfo.CurrentCulture))
                                        </th>
                                    }
                                    <th>
                                        @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("DetectId", System.Globalization.CultureInfo.CurrentCulture))
                                    </th>
                                    @if (@requestCulture.RequestCulture.UICulture.Name == "hu-HU")
                                    {
                                        <th>
                                            @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("DetectDescription", System.Globalization.CultureInfo.CurrentCulture))
                                        </th>
                                    }
                                    else
                                    {
                                        <th>
                                            @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("DetectDescriptionEN", System.Globalization.CultureInfo.CurrentCulture))
                                        </th>
                                    }
                                    <th>
                                        @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("ClassCodeId", System.Globalization.CultureInfo.CurrentCulture))
                                    </th>
                                    @if (@requestCulture.RequestCulture.UICulture.Name == "hu-HU")
                                    {
                                        <th>
                                            @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("ClassCodeDetection", System.Globalization.CultureInfo.CurrentCulture))
                                        </th>
                                    }
                                    else
                                    {
                                        <th>
                                            @Html.DisplayName(@EIS.Resources.Resource.ResourceManager.GetString("ClassCodeDetectionEN", System.Globalization.CultureInfo.CurrentCulture))
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="tablebody">
                                        <td>
                                            <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                @Html.DisplayFor(modelItem => item.LineId)
                                            </button>
                                        </td>
                                        <td>
                                            <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                @Html.DisplayFor(modelItem => item.FailureId)
                                            </button>
                                        </td>
                                        @if (@requestCulture.RequestCulture.UICulture.Name == "hu-HU")
                                        {
                                            <td>
                                                <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </button>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    @Html.DisplayFor(modelItem => item.DescriptionEn)
                                                </button>
                                            </td>
                                        }
                                        <td>
                                            <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                @Html.DisplayFor(modelItem => item.DetectId)
                                            </button>
                                        </td>
                                        @if (@requestCulture.RequestCulture.UICulture.Name == "hu-HU")
                                        {
                                            <td>
                                                <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    @Html.DisplayFor(modelItem => item.DetectDescription)
                                                </button>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    @Html.DisplayFor(modelItem => item.DetectDescriptionEn)
                                                </button>
                                            </td>
                                        }
                                        <td>
                                            <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                @Html.DisplayFor(modelItem => item.ClassCodeId)
                                            </button>
                                        </td>
                                        @if (@requestCulture.RequestCulture.UICulture.Name == "hu-HU")
                                        {
                                            <td>
                                                <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    @Html.DisplayFor(modelItem => item.ClassCodeDetection)
                                                </button>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <button id="myButton" type="button" class="btn btn-transparent tablebutton_transparent" data-toggle="ajax-modal" data-target="#addEdit" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    @Html.DisplayFor(modelItem => item.ClassCodeDetectionEn)
                                                </button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
