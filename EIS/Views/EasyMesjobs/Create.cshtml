@model EIS.EISModels.EasyMesjob

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/EISDesign/_Layout.cshtml";
}

<h1>Create</h1>

<h4>EasyMesjob</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TtstypesId" class="control-label"></label>
                <select asp-for="TtstypesId" class ="form-control" asp-items="ViewBag.TtstypesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlanQty" class="control-label"></label>
                <input asp-for="PlanQty" class="form-control" type="number" min="1" max="100000"/>
                <span asp-validation-for="PlanQty" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CalcAuto" /> @Html.DisplayNameFor(model => model.CalcAuto)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CalcTargetEnd" /> @Html.DisplayNameFor(model => model.CalcTargetEnd)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TargetEnd" class="control-label"></label>
                <input asp-for="TargetEnd" class="form-control" type="datetime" />
                <span asp-validation-for="TargetEnd" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CalcTargetStart" /> @Html.DisplayNameFor(model => model.CalcTargetStart)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TargetStart" class="control-label"></label>
                <input asp-for="TargetStart" class="form-control" type="datetime" />
                <span asp-validation-for="TargetStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

