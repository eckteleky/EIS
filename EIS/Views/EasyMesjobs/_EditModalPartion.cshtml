@using Microsoft.AspNetCore.Localization
@model EIS.EISModels.EasyMesjob
<!-- Sweetalert2 -->
<link rel="stylesheet" href="~/plugins/sweetalert2/sweetalert2.min.css">
<link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
<!-- SweetAlert2 -->
<script src="~/plugins/sweetalert2/sweetalert2.all.min.js"></script>
<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- jQuery UI 1.11.4 -->
<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
<div class="modal fade" id="addEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addLabel">@EIS.Resources.Resource.ResourceManager.GetString("EasyMESJobs", System.Globalization.CultureInfo.CurrentCulture)&nbsp;@EIS.Resources.Resource.ResourceManager.GetString("Edit", System.Globalization.CultureInfo.CurrentCulture).ToLower()</h4>
                <div class="modal-tools">
                    <button type="button" class="btn btn-tool" data-dismiss="modal" id="X">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>

            <div class="modal-body" style="width:100%">
                <form asp-action="Edit" style="width:100%">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="RowNo" />
                    <input type="hidden" asp-for="Started" />
                    <input type="hidden" asp-for="Running" />
                    <input type="hidden" asp-for="Stopped" />
                    <input type="hidden" asp-for="Closed" />
                    <input type="hidden" asp-for="Percentage" />
                    <input type="hidden" asp-for="CalcStart" />
                    <input type="hidden" asp-for="ProducedQty" />
                    <div class="form-group">
                        <label asp-for="SystemParamId" class="control-label"></label>
                        <select asp-for="SystemParamId" class="form-control" asp-items="ViewBag.SystemParamId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="TtstypesId" class="control-label"></label>
                        <select asp-for="TtstypesId" class="form-control" asp-items="ViewBag.TtstypesId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlanQty" class="control-label"></label>
                        <input asp-for="PlanQty" class="form-control" type="number" min="0" max="100000" />
                        <span asp-validation-for="PlanQty" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="CalcAuto" /> @Html.DisplayNameFor(model => model.CalcAuto)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="CalcTargetEnd" /> @Html.DisplayNameFor(model => model.CalcTargetEnd)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="TargetEnd" class="control-label"></label>
                        <input asp-for="TargetEnd" class="form-control" type="date" />
                        <span asp-validation-for="TargetEnd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StatusId" class="control-label"></label>
                        <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                        <span asp-validation-for="StatusId" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="CalcTargetStart" /> @Html.DisplayNameFor(model => model.CalcTargetStart)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="TargetStart" class="control-label"></label>
                        <input asp-for="TargetStart" class="form-control" type="date" />
                        <span asp-validation-for="TargetStart" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <div class="d-flex justify-content-between m-0" style="width: 100%">
                    <div class="col-auto">
                        <button id="close" type="button" class="btn btn-close btn-block" style="width: 100px" data-dismiss="modal">@EIS.Resources.Resource.ResourceManager.GetString("Cancel", System.Globalization.CultureInfo.CurrentCulture)</button>
                    </div>
                    <div class="col-auto">
                        <button id="save" type="button" class="btn btn-classic btn-block" style="width: 100px" data-save="modal">@EIS.Resources.Resource.ResourceManager.GetString("Save", System.Globalization.CultureInfo.CurrentCulture)</button>
                    </div>
                    <script>
                        $(document).ready(function () {
                            $("#save").on("click", function () {
                                Swal.fire({
                                    toast: true, position: 'top-end',
                                    icon: 'success',
                                    title: '@EIS.Resources.Resource.ResourceManager.GetString("SaveTxt", System.Globalization.CultureInfo.CurrentCulture)',
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            });
                            $("#close").on("click", function () {
                                Swal.fire({
                                    toast: true, position: 'top-end',
                                    icon: 'warning',
                                    title: '@EIS.Resources.Resource.ResourceManager.GetString("CloseTxt", System.Globalization.CultureInfo.CurrentCulture)',
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            });
                            $("#X").on("click", function () {
                                Swal.fire({
                                    toast: true, position: 'top-end',
                                    icon: 'warning',
                                    title: '@EIS.Resources.Resource.ResourceManager.GetString("CloseTxt", System.Globalization.CultureInfo.CurrentCulture)',
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            });
                            $('.myselect').select2({
                                theme: 'bootstrap4',
                                placeholder: 'This is my placeholder',
                                allowClear: false
                            }).on('select2-focus', function () {
                                $(this).select2('open');
                            });
                        });
                    </script>
                </div>
            </div>

        </div>
    </div>
</div>